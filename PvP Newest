package com.neumont.csc130.Nim;

import java.util.Random;
import java.util.Scanner;

public class PvPGame implements IGamePlay{

    static int TOP = 3;
    static int MID = 5;
    static int BOT = 7;
	
public  void playerTurn(String name){
	UserInputs userinputs = new UserInputs();
	userinputs.promptForRow(name);
	userinputs.promptForAmount(name);
}

public  boolean gameOver(){
	boolean output = false;
	if((1 >= TOP) && (1 >= MID) && (1 >= BOT)){
		output = true;
		System.out.println("Now I commit seppuku!!!!!");
	}
	else{
		output = false;
	}
	return output;
	
}
@Override
public void Play(Player one, Player two) {
	Random gen = new Random();
	int playerID = gen.nextInt(2) + 1;
	while(!gameOver()){
		if(playerID == 1){
			
			playerTurn(one.getName());
			playerID += 1;
		}
		else{
			
			playerTurn(two.getName());
			playerID -= 1;
		}
	}
	
}
public void Play(){
	
}
@Override
public String getPrompt() {
	
	//String promptedInput = userinputs.promptForInput("pls give me input", false);
	return null;
}
}
